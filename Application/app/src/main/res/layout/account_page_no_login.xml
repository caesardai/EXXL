<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BEC5EA"
    tools:context=".AccountPageNoLogin">


    <Button
        android:id="@+id/loginButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="207dp"
        android:gravity="center"
        android:text="Log In"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/newAccountButton"
        app:layout_constraintEnd_toEndOf="@+id/newAccountButton"
        app:layout_constraintStart_toStartOf="@+id/newAccountButton"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onLoginButtonClick"/>

    <Button
        android:id="@+id/newAccountButton"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:layout_marginBottom="416dp"
        android:gravity="center"
        android:text="Create New Account"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton"
        android:onClick="onNewAccountButtonClick"/>

</androidx.constraintlayout.widget.ConstraintLayout>